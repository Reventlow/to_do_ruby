<!-- app/views/admin/users/_form.html.erb -->
<%= form_with(model: [:admin, user], local: true) do |form| %>
  <div class="mb-3">
    <%= form.label :name, class: 'form-label' %>
    <%= form.text_field :name, id: 'user_name', class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= form.label :email, class: 'form-label' %>
    <%= form.email_field :email, id: 'user_email', class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= form.label :admin, class: 'form-check-label' %>
    <%= form.check_box :admin, id: 'user_admin', class: 'form-check-input' %>
  </div>

  <div class="actions">
    <%= form.submit class: 'btn btn-success' %>
  </div>
<% end %>
