<!-- app/views/admin/users/index.html.erb -->
<h1>Users</h1>

<table class="table">
  <thead>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Actions</th>
  </tr>
  </thead>
  <tbody>
  <% @users.each do |user| %>
    <tr>
      <td>
        <%= user.name %>
        <% if user.admin? %>
          <i class="bi bi-star-fill" style="color: gold;"></i>
        <% end %>
      </td>
      <td><%= user.email %></td>
      <td>
        <%= link_to 'Show', [:admin, user], class: 'btn btn-info btn-sm' %>
        <%= link_to 'Edit', edit_admin_user_path(user), class: 'btn btn-warning btn-sm' %>
        <%= link_to 'Delete', [:admin, user], method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= link_to 'New User', new_admin_user_path, class: 'btn btn-primary' %>
